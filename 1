"use client"
import { useRef } from 'react';
import './Scroll_Horizontal_section.css'
export default function Scroll_Horizontal_section(childern: ReactNode) {
	const scrollContainerRef = useRef<HTMLDivElement | null>(null);
	const handleScroll = (e: React.WheelEvent<HTMLDivElement>) => {
		e.preventDefault();
		if (scrollContainerRef.current) {
			scrollContainerRef.current.scrollBy({
				top: 0,
				left: e.deltaY,
				behavior: 'smooth',
			});
		}
	}

	return (
		<div
			ref={scrollContainerRef}
			className="scroll-container flex overflow-y-auto overflow-x-scroll scrollbar-hide"
			onWheel={handleScroll}
			style={{ scrollSnapType: 'x mandatory' }}
		>

			<section className='w-full flex-shrink-0 snap-start bg-red-100'>{children}</section>
			<section className='w-full flex-shrink-0 snap-start bg-green-200 '>b</section>
			<section className='w-full flex-shrink-0 snap-start bg-blue-200'>c</section>
		</div>


	)
}
